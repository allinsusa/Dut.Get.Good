@page
@model Dut.Get.Good.Web.Pages.Races.AddRaceModel
<form method="post">
    <div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-icon card-header-rose">
                        <div class="card-icon">
                            <i class="material-icons">star</i>
                        </div>
                        <h4 class="card-title">
                            Add New Race
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <abp-input type="text" class="form-control" asp-for="@Model.ObjectToCreate.RaceDescription" />
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-rose pull-right">Submit</button>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</form>
